<%- include('header') %>
<div class="container">
  <table class="table table-hover text-center">
    <thead>
      <% if(rentdata.length != 0){ %>
        <tr><th class="align-middle" colspan="6">물품 대여 내역입니다.</th></tr>
      <% } %>
      <% if(rentdata.length == 0){ %>
        <tr><th class="align-middle" colspan="6">물품 대여 내역이 없습니다.</th></tr>
      <% } %>
      <tr>
        <th class="align-middle" scope="col">#</th>
        <th class="align-middle" scope="col">이름</th>
        <th class="align-middle" scope="col">물품명</th>
        <th class="align-middle" scope="col">수량</th>
        <th class="align-middle" scope="col">대여 날짜</th>
        <th class="align-middle" scope="col">기록 삭제</th>
      </tr>
    </thead>
    <tbody>
      <% for (var i = 0; i < rentdata.length; i++) { %>
          <% var date = rentdata[i].rentdate.split(' ');%>
          <% date = date[0];%>
      <tr>
        <th class="align-middle" scope="row"><%=i+1%></th>
        <td class="align-middle"><%=rentdata[i].username%></td>
        <td class="align-middle"><%=rentdata[i].goodsname%></td>
        <td class="align-middle"><%=rentdata[i].quantity%></td>
        <td class="align-middle"><%=date%></td>
        <td class="align-middle"><a href="/deleteRent/<%=i%>" class="btn btn-outline-danger" onclick="return confirm('대여 기록을 삭제하시겠습니까?')">삭제</a></td>
    </tr>
      <% } %>
    </tbody>
  </table>
  </div>
<%- include('footer') %>