<%- include('header') %>
<div class="container">
    <table class="table table-hover text-center" >
        <thead>
          <tr><th colspan="3"><%=goods.category%>/<%=goods.name%></th></tr>
        </thead>
        <tbody>
          <tr class="align-middle">
              <td rowspan="3" width="60%" class="align-middle">
                <%if(goods.thumbnail){%>
                    <img class="img-responsive center-block" src ='/uploads/<%=goods.thumbnail%>'/>
                    <style>
                    img{max-width: 50%; height: auto; }
                    div{text-align: center;}
                    </style>
                <%}%>
              </td>
              <td class="align-middle">총 수량</td>
              <td class="align-middle"><%=goods.total%></td>
          </tr>
          <tr class="align-middle">
            <td class="align-middle">대여 중</td>
            <td class="align-middle"><%=goods.rent%></td>
          </tr>
          <tr class="align-middle">
            <td class="align-middle">재고</td>
            <td class="align-middle"><%=goods.total-goods.rent%></td>
          </tr>
          <tr><th class="text-left" colspan="3"><%-goods.description%></th></tr>
        </tbody>
    </table>
    <style>.table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
      background-color: #FFF;
    }</style>
    <% if (loginTF){ %>
        <a href="/goods" class="btn btn-default">목록으로</a>
        <a href="/goods/edit/<%=goods.id%>" class="btn btn-primary">수정</a>
        <% } %>
    <% if(!loginTF){ %>
        <a class="btn btn-default" onclick=window.history.back();>이전으로</a>            
    <% } %>
</div>   
<%- include('footer') %>